
@{
}
@model IEnumerable<webBudda.Models.blog>
<style>
    p{
        margin-bottom:0px;
    }
    .blogger{
        display:flex;
        flex-direction:column;
        border-style:solid none none none;
        border-width: thin;
        justify-content:center;
        padding:15px;
        background-color:none;
    }
    .blogger:hover{
        background-color:#EEECEC;
    }
    .blogTable{
        border-style:solid;
        border-width: thin;
        border-radius: 30px;
        overflow-y:hidden;
        padding-bottom:10px;
        height:680px;
        background-color:white;
        
    }
</style>
<div style="margin-top:50px"> </div>
<div>
    <div class="blogTable">
        <h2 style="text-align:center;background-color:#FFC700;margin-bottom:0px;padding:5px;">ห้องสนทนาธรรม / เนื้อหา</h2>
        <div style="overflow-y:scroll;height:100%">
            @foreach (var item in Model)
            {
                <div class="blogger">
                    <a asp-controller="Blog"  asp-action="Viewblog" asp-route-id="@item.Id"
                    style="color: black;text-decoration: none;">
                        <h4 style="text-align:left;">@item.title</h4>
                        <div style="
                            display:flex;
                            justify-content:space-between;">
                        <p><span>ประเภท : </span>@item.typep</p>
                        <p><span>ผู้ตั้งกระทู้ : </span>@item.authen</p>
                </div>
                    </a>
                </div>
    }
      <div style="height:92px"></div>
      </div>
      
   </div>
    
    
</div>
