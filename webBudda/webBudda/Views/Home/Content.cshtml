@{
}
@model List<webBudda.Models.blog>
<style>
    p{
        margin-bottom:0px;
    }
    .blogger{
        display:flex;
        flex-direction:column;
        border-style:solid;
        border-width: thin;
        justify-content:center;
        padding:5px;
        background-color:white;
    }
    .blogger:hover{
        background-color:gray;
    }
</style>
<div>
    <h1>Content</h1>

    @foreach (var item in Model)
    {
        <div class="blogger">
            <a asp-controller="Home"  asp-action="Viewblog" asp-route-id="@item.Id">
            <h4 style="text-align:left;">@item.title</h4>
            <div style="
                    display:flex;
                    justify-content:space-between;">
                <p><span>Type : </span>@item.typep</p>
                <p><span>author : </span>@item.authen</p>
            </div>
            </a>
        </div>
    }
</div>
