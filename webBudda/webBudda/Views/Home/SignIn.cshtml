<h1>SignIn</h1>

<!DOCTYPE html>
<html>

<head>
  <meta charset="utf-8" />
  <title></title>
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css"
    integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
</head>

<body> 

  <button class="btn btn-primary" data-target="#loginmodal" data-toggle="modal">Logins</button>

  <button class="loginbutton"><a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Register">สมัครสมาชิก</a></button>

  @*<button class="btn btn-primary" data-target="#registermodal" data-toggle="modal">Register</button>*@

  <div class="container">
    <div class="row">
      <div class="col col-sm-12">
        <div class="modal-dialog" data-keyboard="false" data-backdrop="static" id="loginmodal" tabindex="-1">
          <div class="modal-dialog">
            <div class="modal-content">
              <div class="modal-header">
                <h4 class="modal-title">Loin</h4>
                <button class="close" data-dismiss="modal">&times;</button>
              </div>
              <div class="modal-body">
                <form asp-action="SignIn">
                  <div  class="form-group">
                    <label asp-for="Email">User Name</label>
                    <input asp-for="Email" type="text" class="form-control" placeholder="User Name" id="inputUserName" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                  </div>
                  <div class="form-group">
                    <label asp-for="Password">Password</label>
                    <input asp-for="Password" type="password" class="form-control" placeholder="Password" id="inputPassword" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                  </div>
                   <div class="form-group">
                    <input type="submit" value="Create" class="btn btn-primary" />
                   </div>
                </form>
              </div>
              <div class="modal-footer">
                <button type="submit" value="Create" class="btn btn-primary">Login</button>
                <button class="btn btn-primary" data-dismiss="modal">Close</button>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</body>

</html>
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.0/dist/js/bootstrap.min.js"
